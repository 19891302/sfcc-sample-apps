{
  "name": "talon",
  "version": "0.0.1",
  "description": "Lightning Web Framework",
  "private": true,
  "scripts": {
    "clean": "lerna run clean",
    "build": "lerna run build --stream",
    "build:common": "lerna run build --scope talon-common --stream",
    "build:framework": "lerna run build --scope talon-framework --stream",
    "build:compiler": "lerna run build --scope talon-compiler --stream",
    "build:commerce": "lerna run build --scope talon-commerce --stream",
    "serve": "lerna run serve --scope talon-commerce --stream",
    "start:commerce": "lerna run start --scope talon-commerce --stream",
    "start": "yarn build:common && MODE=\"${MODE:-dev}\" yarn build:framework && yarn build:compiler && MODE=\"${MODE:-dev}\" yarn start:commerce"
  },
  "devDependencies": {
    "eslint": "^5.10.0",
    "eslint-plugin-lwc": "^0.5.1",
    "lerna": "3.4.3",
    "npm-run-all": "^4.1.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "yarn": ">=1.9.4",
    "node": ">=10.0"
  }
}
