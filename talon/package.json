{
  "name": "talon",
  "version": "0.0.1",
  "description": "Lightning Web Framework",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://git.soma.salesforce.com/communities/talon"
  },
  "scripts": {
    "clean": "lerna run clean",
    "lint": "eslint . --max-warnings 0",
    "test": "run-p test:**",
    "test:modules": "jest --silent",
    "test:integration": "lerna run local --scope talon-integration --stream",
    "coverage": "jest --coverage --silent --maxWorkers=100",
    "ready": "yarn lint && yarn coverage && yarn test:integration",
    "build": "lerna run build --stream",
    "build:common": "lerna run build --scope talon-common --stream",
    "build:framework": "lerna run build --scope talon-framework --stream",
    "build:compiler": "lerna run build --scope talon-compiler --stream",
    "build:template": "lerna run build --scope talon-template-flashhelp --stream",
    "build:commerce": "lerna run build --scope talon-commerce --stream",
    "serve": "lerna run serve --scope talon-template-flashhelp --stream",
    "start:template": "lerna run start --scope talon-template-flashhelp --stream",
    "start:commerce": "lerna run start --scope talon-commerce --stream",
    "start": "yarn build:common && yarn build:framework && yarn build:compiler && yarn start:template",
    "docs:generate": "for filename in node_modules/biblio/templates/*.md; do pandoc docs/biblio.md --template $filename -t gfm -o docs/$(basename $filename); done",
    "maven": "yarn && yarn clean && yarn build && mvn clean install"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "babel-plugin-istanbul": "^5.0.1",
    "biblio": "^218.1.0",
    "concurrently": "^3.5.1",
    "eslint": "^4.19.1",
    "eslint-plugin-lwc": "^0.5.1",
    "jest-html-reporter": "^2.3.0",
    "lerna": "3.4.3",
    "npm-run-all": "^4.1.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "yarn": "1.9.4"
  }
}
